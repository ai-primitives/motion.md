{
  "name": "motion.md",
  "version": "1.0.0",
  "description": "`motion.md` is a powerful npm package and CLI tool designed for creating dynamic, high-quality videos using Markdown syntax. Fully compatible with [Slidev](https://sli.dev) syntax, `motion.md` extends the syntax to include advanced configuration options in both the front matter and at the slide level, leveraging [Remotion](https://remotion.dev) to transform your slides into stunning videos. This makes `motion.md` ideal for presentations, tutorials, and content creation.",
  "main": "dist/index.js",
  "bin": {
    "motion.md": "./dist/cli/index.js"
  },
  "scripts": {
    "test": "vitest",
    "build": "tsc && vite build",
    "dev": "vite",
    "preview": "vite preview",
    "lint": "prettier --write .",
    "coverage": "vitest run --coverage",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "markdown",
    "video",
    "presentation",
    "slidev",
    "remotion",
    "cli"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^22.10.2",
    "@types/node-fetch": "^2.6.12",
    "@types/puppeteer": "^5.4.7",
    "@types/react": "^19.0.1",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@vitejs/plugin-react": "^4.3.4",
    "jsdom": "^25.0.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vitest": "^2.1.8",
    "zod": "^3.24.1"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.0.8",
    "@code-hike/lighter": "^1.0.1",
    "@code-hike/mdx": "^0.9.0",
    "@lumaai/luma-web": "^0.2.2",
    "@mdx-js/mdx": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@remotion/cli": "^4.0.240",
    "@remotion/core": "^1.0.0-y.46",
    "@remotion/media-utils": "^4.0.240",
    "@types/mdx": "^2.0.13",
    "axios": "^1.7.9",
    "browserbase": "^3.0.3",
    "codehike": "^1.0.4",
    "commander": "^12.1.0",
    "lumaai": "^1.2.0",
    "nanospinner": "^1.2.2",
    "node-fetch": "^2.7.0",
    "puppeteer": "^23.10.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remotion": "^4.0.240",
    "shiki": "^1.24.2",
    "unsplash-js": "^7.0.19",
    "vfile": "^6.0.3",
    "vfile-matter": "^5.0.0",
    "standard-version": "^9.5.0"
  },
  "type": "module"
}
